// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === ENUMS ===
enum Role {
  USER
  ADMIN
}
enum Gender {
  MALE
  FEMALE
  OTHER
}
enum StatusVerificacao {
  PENDENTE
  APROVADO
  REPROVADO
}
enum RequestStatus {
  PENDING
  APPROVED
  DECLINED
}

// === MODELOS ===
model User {
  id                Int       @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String    @unique
  password          String
  driverLicense     String? // Opcional
  gender            Gender    // Usa o enum
  senacId           String    @unique
  statusVerificacao StatusVerificacao @default(PENDENTE) // Usa o enum
  role              Role      @default(USER) // O nosso novo campo de Cargo

  // Relações
  shares        Share[]
  requests      Request[]
}

model Share {
  id            Int       @id @default(autoincrement())
  driverId      Int
  origin        String
  destination   String
  departureTime DateTime
  spots         Int
  message       String?

  // Relações
  driver        User      @relation(fields: [driverId], references: [id])
  requests      Request[]
}

model Request {
  id            Int           @id @default(autoincrement())
  shareId       Int
  userId        Int
  message       String?
  status        RequestStatus @default(PENDING)
  createdAt     DateTime      @default(now())

  // Relações
  share         Share         @relation(fields: [shareId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
}